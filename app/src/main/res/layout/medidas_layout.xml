<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back" >


    <TextView
        android:id="@+id/descricao_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:hint="Texto da Descricao"/>

        <TextView
            android:id="@+id/text_medidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/descricao_text"
            android:text="MEDIDAS"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_comprimento"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="5"
            android:layout_below="@+id/text_medidas"
            android:layout_marginTop="30dp"
            android:gravity="center|bottom"
            android:hint="Comprimento"
            android:inputType="number"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_cruz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_comprimento"
            android:layout_below="@+id/text_medidas"
            android:layout_toEndOf="@+id/add_comprimento"
            android:padding="5dp"
            android:text="X"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_largura"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="5"
            android:layout_below="@+id/text_medidas"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/text_cruz"
            android:gravity="center|bottom"
            android:hint="Largura"
            android:inputType="number"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_cruz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_largura"
            android:layout_below="@+id/text_medidas"
            android:layout_toEndOf="@+id/add_largura"
            android:textSize="17sp"
            android:padding="5dp"
            android:text="X"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_expessura"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_medidas"
            android:ems="4"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/text_cruz2"
            android:gravity="center|bottom"
            android:hint="Exp"
            android:inputType="number"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_quantidade"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="QUANTIDADE"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/add_comprimento" />

        <EditText
            android:id="@+id/add_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/text_quantidade"
            android:layout_toEndOf="@+id/text_quantidade"
            android:ems="6"
            android:layout_marginStart="15dp"
            android:gravity="center|bottom"
            android:inputType="number"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textSize="18sp"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/botao_medidas"
            android:layout_width="@dimen/botao_width"
            android:layout_height="@dimen/botao_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_back"
            android:gravity="center"
            android:text="INSERIR"
            android:textSize="18sp" />

    <Button
        android:id="@+id/botao_cancelar"
        android:layout_width="@dimen/botao_width"
        android:layout_height="@dimen/botao_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_back"
        android:gravity="center"
        android:text="CANCELAR"
        android:textSize="18sp" />


</RelativeLayout>
