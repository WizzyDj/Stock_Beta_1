<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wizzydj.stockbeta.Detalhes">

    <ImageView
        android:id="@+id/imagem_detalhes"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/titlo_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CONTRAPLACADO CARVALHO"
        android:layout_below="@+id/imagem_detalhes"
        android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/text_medidas_detalhes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlo_detalhes"
        android:layout_marginTop="20dp"
        android:hint="MEDIDAS"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/medidas_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_medidas_detalhes"
        android:layout_marginTop="10dp"
        android:hint="2440 x 1220 x 10"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_fornecedor_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medidas_detalhes"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:hint="FORNECEDOR"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/fornecedor_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_fornecedor_detalhes"
        android:layout_marginTop="10dp"
        android:hint="Balbino e faustino"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_quantidade_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fornecedor_detalhes"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:hint="QUANTIDADE"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/quantidade_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_quantidade_detalhes"
        android:layout_marginTop="10dp"
        android:hint="120 Placas"
        android:textSize="20sp"/>

</RelativeLayout>
