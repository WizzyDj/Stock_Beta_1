<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/it_imagem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_done"
        android:backgroundTint="@color/mcolorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/it_descricao"
        android:layout_toEndOf="@+id/it_imagem"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="1dp"
        android:maxLines="2"
        android:layout_toStartOf="@+id/it_fornecedor"
        android:hint="Descricao"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/it_medidas"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/it_quantidade"
        android:layout_alignBaseline="@+id/it_imagem"
        android:textAlignment="gravity"
        android:gravity="bottom"
        android:hint="Medidas"
        android:maxLines="1"
        android:textSize="19sp"
        android:layout_below="@+id/it_descricao"
        android:layout_toEndOf="@+id/it_imagem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/it_fornecedor"
        android:layout_marginStart="4dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewEnd"
        android:hint="Fornecedor"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/it_quantidade"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/it_fornecedor"
        android:layout_alignParentEnd="true"
        android:textAlignment="gravity"
        android:gravity="bottom|end"
        android:hint="Quantidade"
        android:textStyle="bold"
        android:textSize="19sp"/>
</RelativeLayout>
